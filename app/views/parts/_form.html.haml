= form_for(@part) do |f|
  .part.desc
    = f.label :desc, "Description"
    %br/
    = f.text_field :desc
  .part.serial
    = f.label :serial, "Serial"
    %br/
    = f.text_field :serial
  .part.price
    = f.label :price, "Price"
    %br/
    = f.number_field :price, :min => 0
  .part.datev_id
    = f.label :datev_id, "Datev_ID"
    %br/
    = f.number_field :datev_id, :min => 0
  #form_buttons
    = f.submit           id: "commit", :"data-disable-with" => "Updating..."
    = f.submit "Cancel", id: "cancel"
    = f.submit "Revert", id: "revert", type: "reset"
= javascript_tag "focus_select('#part_desc');"
